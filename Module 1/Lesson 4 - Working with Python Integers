first_number = int(input("Please enter your 1st number: "))
second_number = int(input("Please enter your 2nd number: "))
number_function = (input("What would you like to do with these numbers? M to Multiply, D to Divide, A to Add, S to Subtract: "))

if number_function == "M":
    print("Your multiplied total is: ", first_number * second_number)
elif number_function == "D":
    print("Your divided total is: ", first_number / second_number)
elif number_function == "A":
    print("Your added total is: ", first_number + second_number)
elif number_function == "S":
    print("Your subtracted total is: ", first_number - second_number)
else:
    print("Please start again and only enter the character for the function you'd like to run.")